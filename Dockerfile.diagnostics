FROM python:3.10-slim

# system deps + psycopg2
RUN apt-get update \
 && apt-get install -y --no-install-recommends build-essential libpq-dev \
 && rm -rf /var/lib/apt/lists/*

# Python deps for diagnostics
RUN pip install --no-cache-dir \
      streamlit>=1.18.1 \
      liualgotrader \
      pandas \
      psycopg2-binary \
      streamlit-autorefresh \
      altair==4.2.2 \
      vega_datasets

WORKDIR /app
COPY streamlit/app/dashboard_diagnostics.py .

EXPOSE 8501
ENTRYPOINT ["streamlit","run","dashboard_diagnostics.py","--server.port=8501","--server.address=0.0.0.0"]
