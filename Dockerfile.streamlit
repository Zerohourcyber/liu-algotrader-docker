FROM python:3.10-slim

RUN pip install --no-cache-dir liualgotrader streamlit pandas

WORKDIR /app

COPY streamlit/app/dashboard_diagnostics.py .
COPY streamlit/app/live_trades.py .

# we’ll supply the `streamlit run …` via docker-compose’s command
ENTRYPOINT ["sh","-c"]
CMD ["echo 'Use docker-compose to launch Streamlit dashboards.'"]
